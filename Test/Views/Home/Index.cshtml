<head>
    <style>
        table {
            border-collapse: inherit;
            border: 2px solid black;
            padding: 2px;
        }
        th {
            background-color: black;
            color: white;
            width:150px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h2>Caixa Eletrônico</h2>
    </div>
    <div>
        <br>
        <h4>Deposito</h4>
    </div>
    <form method="POST" runat="server">
        <div>
            <label for="ValorDeposito">Deposite o valor:</label>
            <input type="text" name="ValorDeposito" value="" placeholder="Insira aqui" />
            <input type="submit" value="Depositar" />
        </div>
    </form>
    <div>
        <br>
        <h4>Saque</h4>
    </div>
    <form method="POST" runat="server">
        <div>
            <label for="ValorSaque">Valor a ser sacado:</label>
            <input type="text" name="ValorSaque" value="" placeholder="Insira aqui" />
            <input type="submit" value="Sacar" />
        </div>
    </form>
    <div>
        <h3>Notas</h3>
        <table>
            <tr>
                <th>Valor Notas</th>
                <th>Quantidade</th>
            </tr>
            <tr>
                <td>Nota de 100</td>
                <td style="text-align:center">@Html.DisplayFor(modelItem => Model.N100)</td>
            </tr>
            <tr>
                <td>Nota de 50</td>
                <td style="text-align:center">@Html.DisplayFor(modelItem => Model.N50)</td>
            </tr>
            <tr>
                <td>Nota de 20</td>
                <td style="text-align:center">@Html.DisplayFor(modelItem => Model.N20)</td>
            </tr>
            <tr>
                <td>Nota de 10</td>
                <td style="text-align:center">@Html.DisplayFor(modelItem => Model.N10)</td>
            </tr>
            <tr>
                <td>Nota de 5</td>
                <td style="text-align:center">@Html.DisplayFor(modelItem => Model.N5)</td>
            </tr>
            <tr>
                <td>Nota de 2</td>
                <td style="text-align:center">@Html.DisplayFor(modelItem => Model.N2)</td>
            </tr>
        </table>
        <div>
            <br>
            <strong>@Html.DisplayFor(modelItem => Model.Valid)</strong>
        </div>
    </div>

</body>
