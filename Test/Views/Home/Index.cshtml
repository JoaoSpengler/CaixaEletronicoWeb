            </tr>
            <tr>
                <td>Nota de 2</td>
                <td style="text-align:center">@Html.DisplayFor(modelItem => Model.N2)</td>
            </tr>
        </table>
        <div>
            <br>
            <strong>@Html.DisplayFor(modelItem => Model.Valid)</strong> <!--Somente sinalizar se saque for inválido-->
        </div>
    </div>

